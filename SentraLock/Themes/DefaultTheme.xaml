<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp">
	<Color x:Key="primaryColor">#0078FF</Color> <!--Cyber Blue-->
	<Color x:Key="secondaryColor">#1A1C1F</Color> <!--Midnight Graphite-->
	<Color x:Key="accentColor">#00F0FF</Color> <!--Neon Aqua-->
	<Color x:Key="supportColor">#C4C7CE</Color> <!--Silver Mist-->
	<Color x:Key="optionalHighlight">#2EE59D</Color> <!--Secure Green-->
	<Color x:Key="logoColor">#DAA520</Color>

	<SolidColorBrush x:Key="primarySolidBrush" Color="#0078FF"/>
	<SolidColorBrush x:Key="secondarySolidBrush" Color="#1A1C1F"/>
	<SolidColorBrush x:Key="accentSolidBrush" Color="#00F0FF"/>
	<SolidColorBrush x:Key="supportSolidBrush" Color="#C4C7CE"/>
	<SolidColorBrush x:Key="logoColorBrush" Color="#DAA520"/>
	<SolidColorBrush x:Key="optionalHighlightBrush" Color="#2EE59D"/>

	<FontFamily x:Key="Montserrat-EB">/Fonts/#Montserrat-ExtraBold</FontFamily>
	<FontFamily x:Key="Poppins">/Fonts/#Poppins-Regular</FontFamily>
	<FontFamily x:Key="Poppins-Black">/Fonts/#Poppins-Black</FontFamily>

	<Style x:Key="primaryButton" TargetType="Button">
		<Setter Property="Background" Value="#1A1C1F"/>
		<Setter Property="Foreground" Value="#C4C7CE"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border Background="{TemplateBinding Background}" BorderBrush="#0078FF" BorderThickness="1">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#00F0FF"/>
				<Setter Property="Foreground" Value="#1A1C1F"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="buttonClose" TargetType="Button">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="#C4C7CE"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border Background="{TemplateBinding Background}" BorderThickness="0">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="Foreground" Value="#00F0FF"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="menuButton" TargetType="Button">
		<Setter Property="Background" Value="#1A1C1F"/>
		<Setter Property="Foreground" Value="#C4C7CE"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Button}">
					<Border Background="{TemplateBinding Background}" BorderBrush="#0078FF" BorderThickness="1">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#1A1C1F"/>
				<Setter Property="Foreground" Value="#00F0FF"/>
			</Trigger>
		</Style.Triggers>
	</Style>
</ResourceDictionary>